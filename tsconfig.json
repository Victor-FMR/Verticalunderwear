{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES2022", // Mejor equilibrio para modernidad y compatibilidad
    "module": "ES2022", // Alineado con Node.js y compatible con la mayoría de las herramientas
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", // 'NodeNext' es experimental, 'node' es más estable
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false, // Cambiado a false para permitir JavaScript sin verificación de tipos
    //"declaration": false, // Genera archivos .d.ts para proyectos de biblioteca
    //"sourceMap": false, // Genera mapas de fuente para depuración
    "rootDir": "./src", // Especifica el directorio raíz de los archivos de entrada
    "removeComments": false, // No eliminar comentarios, útil para documentación
    "noImplicitReturns": true, // Asegura que todas las ramas de una función tengan un retorno
    "noUnusedLocals": true, // Reporta variables locales no utilizadas
    "noUnusedParameters": true // Reporta parámetros no utilizados en funciones
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}

